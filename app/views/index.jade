include header

div( class="container" ng-app='Hello' ng-controller='NameController')   
    input( class="form-control" name='bigname' , type='text' , ng-model='bigname' )

    p {{ bigname | sayhello }}

    if isLoggedIn
        form( name='logout' , method='POST' action='logout' )
            div
                input( type='submit' , value='Logout' )
    else
        form( name='login' , method='POST' action='login' )
            div
                label( for='email' ) email
                input( class="form-control" name='email' , type='email' , placeholder='youremail@email.com' )
            div
                label( for='password') pass
                input( class="form-control" name='password' , type='password' , placeholder='password' )
            div
                input( name='remember' , type='checkbox' , value='remember' ) 
                | Remember me
            div
                input( value='login' , type='submit' )
include lib         
script(type='text/javascript',src='/application.js')
 
    